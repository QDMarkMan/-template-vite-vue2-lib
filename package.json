{
  "name": "@template/vite-vue2-lib",
  "version": "1.0.0",
  "scripts": {
    "dev": "vite --host",
    "// ---------- Build command ----------": "",
    "build": "vite build",
    "build:app": "BUILD_MODE=app run-p type-check build-only",
    "build-only": "vite build",
    "preview": "vite preview --port 4173",
    "// ---------- Test command ----------": "",
    "test:unit": "vitest --environment jsdom",
    "test:e2e": "start-server-and-test preview http://localhost:4173/ 'cypress open --e2e'",
    "test:e2e:ci": "start-server-and-test preview http://localhost:4173/ 'cypress run --e2e'",
    "// ---------- Lint & check ----------": "",
    "type-check": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format:prettier": "prettier --write  \"src/**/*.{js,ts,json,tsx,css,less,scss,vue,html,md}\"",
    "lint-staged": "npx lint-staged",
    "// ---------- Project init ----------": "",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "echo \"git commit trigger husky pre-commit hook\" "
    }
  },
  "lint-staged": {
    "src/**/*.{js,ts,vue}": [
      "npm run lint",
      "eslint --fix"
    ]
  },
  "dependencies": {
    "element-ui": "^2.15.14",
    "vue": "^2.7.7"
  },
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.23.7",
    "@babel/preset-env": "^7.23.8",
    "@commitlint/cli": "^18.5.0",
    "@commitlint/config-conventional": "^18.5.0",
    "@rollup/plugin-babel": "^6.0.4",
    "@types/jsdom": "^16.2.14",
    "@types/node": "^16.11.45",
    "@typescript-eslint/parser": "^6.17.0",
    "@vitejs/plugin-legacy": "^2.0.0",
    "@vitejs/plugin-vue2": "^1.1.2",
    "@vitejs/plugin-vue2-jsx": "^1.0.2",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^11.0.0",
    "@vue/test-utils": "^1.3.0",
    "@vue/tsconfig": "^0.1.3",
    "core-js": "^3.35.1",
    "cypress": "^10.3.0",
    "eslint": "^8.5.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-vue": "^9.0.0",
    "husky": "^8.0.3",
    "jsdom": "^20.0.0",
    "lint-staged": "^15.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "start-server-and-test": "^1.14.0",
    "terser": "^5.14.2",
    "typescript": "~4.7.4",
    "vite": "^3.0.2",
    "vite-plugin-eslint": "^1.8.1",
    "vitest": "^0.18.1",
    "vue-eslint-parser": "^9.3.2",
    "vue-template-compiler": "^2.7.7",
    "vue-tsc": "^0.38.8"
  },
  "browserslist": [
    "> 0.5%",
    "not dead"
  ]
}
